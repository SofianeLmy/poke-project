<div class="right-panel">
  <h1>Sign in!</h1>
  {{! <h6>You are few clicks away..</h6> }}
  <form class="text-field" action="/authentication/sign-in" method="POST">

    <label for="input-email">Email</label>
    <input type="email" name="email" placeholder="Your Email" />

    <label for="input-password">Password</label>
    <input type="password" name="password" placeholder="Make it Strong" />

    <button class="sign-in-btn">Sign In</button>
  </form>

  <form action="/authentication/sign-up" method="GET">
    <button>Register now</button>
    {{! <div class="register-link"> Not a member yet? <a href=""/authentication/sign-in"">Register now</a></div> }}
  </form>

</div>

