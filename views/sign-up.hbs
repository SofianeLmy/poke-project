<form action="/authentication/sign-up" method="POST">
  <label for="input-name">Name</label>
  <input type="text" id="input-name" name="name" placeholder="Your Name" />

  <label for="input-age">Age</label>
  <input type="text" id="input-age" name="age" placeholder="Your Age" />

  <label for="input-gender">Gender</label>
  <select name="gender" id="input-gender">
    <option value="choose">Please select an option</option>
    <option value="Male">Male</option>
    <option value="Female">Female</option>
    <option value="Other">Other</option>
  </select>

  <label for="input-email">Email</label>
  <input type="email" id="input-email" name="email" placeholder="Your Email" />
  <label for="input-password">Password</label>
  <input
    type="password"
    name="password"
    id="input-password"
    placeholder="A Strong Password"
  />
  <button>Sign Up</button>
</form>